<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/global.css"></link>
        <link rel="stylesheet" href="/css/bootstrap.min.css"></link>
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <meta 
                name='viewport' 
                content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' 
                />
        <script>

$(function() {
    $('button[data-ctr-action]').click(function() {
        id = $(this).data('ctr-id');
        teamid = $(this).data('team');
        console.log(id);
        val = parseInt($('[data-team=' + teamid + '][data-ctr-value=' + id + ']').html());
        console.log(val);
        if($(this).data('ctr-action') == '+') {
            val += 1;
        }else{
            val -= 1;
        }
        $('[data-team=' + teamid + '][data-ctr-value=' + id + ']').html(val);

    });
    $('button[data-btn-action]').click(function() {
        console.log($(this));
        if($(this).hasClass('btn-success')) {
            console.log('whoo');
            $(this).removeClass('btn-success');
            $(this).addClass('btn-danger');
        } else { 
            console.log('whee');
            $(this).addClass('btn-success');
            $(this).removeClass('btn-danger');
        }
        console.log($(this).hasClass('btn-success'));
        console.log($(this).hasClass('btn-danger'));
    });
    $('.carousel').carousel('pause');

});
function qFunction() {
    console.log($(indicator));
    $('.carousel').carousel('next');
    if ($('#indicator').hasClass('pre')) {
        $('#indicator').removeClass('pre');
        $('#indicator').addClass('auto');
        $('#indicator').html('Auto');
    } else if ($('#indicator').hasClass('auto')) {
        $('#indicator').removeClass('auto');
        $('#indicator').addClass('tele');
        $('#indicator').html('Tele');
    } else if ($('#indicator').hasClass('tele')) {
        $('#indicator').removeClass('tele');
        $('#indicator').addClass('post');
        $('#indicator').html('Post');
    } else if ($('#indicator').hasClass('post')) {
        $('#indicator').removeClass('post');
        $('#indicator').addClass('pre');
        $('#indicator').html('Pre');
    }
}
function gqFunction() {
    $('.carousel').carousel('prev');
    if ($('#indicator').hasClass('pre')) {
        $('#indicator').removeClass('pre');
        $('#indicator').addClass('post');
        $('#indicator').html('Post');
    } else if ($('#indicator').hasClass('auto')) {
        $('#indicator').removeClass('auto');
        $('#indicator').addClass('pre');
        $('#indicator').html('Pre');
    } else if ($('#indicator').hasClass('tele')) {
        $('#indicator').removeClass('tele');
        $('#indicator').addClass('auto');
        $('#indicator').html('Auto');
    } else if ($('#indicator').hasClass('post')) {
        $('#indicator').removeClass('post');
        $('#indicator').addClass('tele');
        $('#indicator').html('Tele');
    }
}

        </script>
