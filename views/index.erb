<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/global.css"></link>
        <link rel="stylesheet" href="/css/bootstrap.min.css"></link>
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script>
$(function() {
    $('button[data-ctr-action]').click(function() {
        id = $(this).data('ctr-id');
        val = parseInt($('[data-ctr-value=' + id + ']').html());
        if($(this).data('ctr-action') == '+') {
            val += 1;
        }else{
            val -= 1;
        }
        id = $(this).data('team');
        $('[data-ctr-value=' + id + ']').html(val);
    });
    $('.carousel').carousel('pause');
});
function qFunction() {
    $('.carousel').carousel('next');
}
function gqFunction() {
    $('.carousel').carousel('prev');
}
        </script>
    </head>    
    <body>
        <div class="container-fluid">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel" data-pause="true">
                <div class="carousel-inner">
                    <div class="carousel-item active" style="padding:10px">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <%= partial :button, locals: {name: "Cross"}%>
                                        <%= partial :counter, locals: {label: "Switch", id: 'auto-switch',teamid: "461"} %>
                                        <%= partial :counter, locals: {label: "Scale", id: 'auto-scale',teamid: "461"} %>
                                    </div>
                                    <div class="col-sm-4"> 
                                        <%= partial :button, locals: {name: "Cross"}%>
                                        <%= partial :counter, locals: {label: "Switch", id: 'auto-switch',teamid: "461"} %>
                                        <%= partial :counter, locals: {label: "Scale", id: 'auto-scale',teamid: "461"} %>
                                    </div>
                                    <div class="col-sm-4"> 
                                        <%= partial :button, locals: {name: "Cross"}%>
                                        <%= partial :counter, locals: {label: "Switch", id: 'auto-switch',teamid: "461"} %>
                                        <%= partial :counter, locals: {label: "Scale", id: 'auto-scale',teamid: "461"} %>

                                    </div>    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" style="padding:10px">
                        <div class="row">    
                            <div class="col-sm-12">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <%= partial :button, locals: {name: "Cross",teamid: "461"} %>
                                        <%= partial :counter, locals: {label: "Switch", id: 'auto-switch',teamid: "461"} %>
                                        <%= partial :counter, locals: {label: "Scale", id: 'auto-scale',teamid: "461"} %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding:10px;padding-top:20px">
                        <div class="col-sm-2">
                            <button type="button" onclick="gqFunction()" class="btn btn-info btn-block">Prev</button>
                        </div>
                        <div class="col-sm-8">
                        </div>
                        <div class="col-sm-2">
                            <button type="button" onclick="qFunction()" class="btn btn-info btn-block">Next</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
