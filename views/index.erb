<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="/css/global.css"></link>
        <link rel="stylesheet" href="/css/bootstrap.min.css"></link>
        <script src="js/jquery.min.js"></script>
        <script src="js/bootstrap.min.js"></script>
        <script>
$(function() {
    $('button[data-ctr-action]').click(function() {
        id = $(this).data('ctr-id');
        teamid = $(this).data('team');
        console.log(id);
        val = parseInt($('[data-team=' + teamid + '][data-ctr-value=' + id + ']').html());
        console.log(val);
        if($(this).data('ctr-action') == '+') {
            val += 1;
        }else{
            val -= 1;
        }
        $('[data-team=' + teamid + '][data-ctr-value=' + id + ']').html(val);

    });
    $('button[data-btn-action]').click(function() {
        console.log($(this));
        if($(this).hasClass('btn-success')) {
            console.log('whoo');
            $(this).removeClass('btn-success');
            $(this).addClass('btn-primary');
        } else { 
            console.log('whee');
            $(this).addClass('btn-success');
            $(this).removeClass('btn-primary');
        }
        console.log($(this).hasClass('btn-success'));
        console.log($(this).hasClass('btn-primary'));
    });
    $('.carousel').carousel('pause');

});
function qFunction() {
    $('.carousel').carousel('next');
}
function gqFunction() {
    $('.carousel').carousel('prev');
}

        </script>
    </head>    
